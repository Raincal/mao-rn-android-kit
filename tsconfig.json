{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noEmitOnError": false,
        "preserveConstEnums" : true,
        "noLib": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "jsx": "react"
    },
    "include" : [
        "node_modules/react-mixins-decorator/dist/index.d.ts",
        "src/**/*",
        "typings/**/*"
    ],
    "exclude" : [
        "node_modules",
        "example",
        ".vscode",
        "android",
        "devtools"
    ]
}