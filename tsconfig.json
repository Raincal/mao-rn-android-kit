{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": false,
        "rootDir": "src",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "noEmitOnError": false,
        "preserveConstEnums" : true,
        "noLib": false,
        "sourceMap": false,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react"
    },
    "include" : [
        "src/**/*",
        "typings/**/*"
    ],
    "exclude" : [
        "node_modules",
        "example",
        ".vscode",
        "android",
        "devtools"
    ]
}
